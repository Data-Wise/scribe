#!/bin/bash
# Nexus Desktop - Quick Launcher
# Usage: ./nexus

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "$SCRIPT_DIR"

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo "тЪая╕П  Dependencies not installed. Running installation..."
    ./install.sh
fi

# Launch Nexus
echo "ЁЯЪА Launching Nexus Desktop..."
npm start
